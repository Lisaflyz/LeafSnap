<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_roundcorner_selector"
    android:alpha="1"
    android:orientation="vertical" >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出程序"
        android:gravity="center"
        android:textSize="20sp"
        android:padding="10dp"
        android:background="#fff"
        android:textColor="#000"
        />
     <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:height="0.5dp"
        android:background="#000"/>
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:background="@drawable/bg_roundcorner_selector" 
        >
        
        <Button
            android:id="@+id/btn_dialog_optimistic"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content" 
    		android:layout_weight="1"
    		android:background="@drawable/bg_roundcorner_selector" 
    		android:text="@string/string_optimistic"
    		android:padding="10dp"
    		android:textSize="18sp"
    		android:textColor="#000"
            />
        
         <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="fill_parent"
        	android:width="0.5dp"
        	android:background="@color/diliver"/>
        
        <Button
            android:id="@+id/btn_dialog_negative"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content" 
    		android:layout_weight="1"
    		android:background="@drawable/bg_roundcorner_selector" 
    		android:padding="10dp"
    		android:text="@string/string_negative"
    		android:textSize="18sp"
    		android:textColor="#000"
            />
        
    </LinearLayout>

</LinearLayout>
